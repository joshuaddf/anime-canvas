<style>
  .overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.2);
    pointer-events: none;
    opacity: 0;
  }

  .header-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 0%;
    background-color: #f7f5f2;
    z-index: 9;
    display: flex;
    align-items: center;
    justify-content: start;
    container-type: inline-size;
  }

  .header-text {
    font-family: "Helvetica", sans-serif;
    font-size: 16px;
    font-weight: 600;
    text-align: left;
    max-width: 50ch;
    padding: 2rem;
    line-height: 1.1;
    color: #4a4a4a;
  }

  section {
    width: 100%;
    height: 100vh;
    background-color: red;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn {
    position: fixed;
    z-index: 99;
    top: 2rem;
    right: 2rem;
    width: 50px;
    height: 25px;
    /* background-color: red; */
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-family: "Helvetica", sans-serif;
    font-size: clamp(1rem, 1.1vw, 1.5rem);
    overflow: hidden;
  }

  .btn-slider {
    width: 100%;
    height: 100%;
    position: relative;
  }

  .el {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;

    &:nth-child(2) {
      position: absolute;
      top: 100%;
    }
  }
</style>

<script>
  import { setupAnimations } from "../script/Anime";
  // import { setupLenis } from "../script/Lenis";
  // setupLenis();
  setupAnimations();
</script>
