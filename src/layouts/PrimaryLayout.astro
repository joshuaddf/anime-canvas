    <div class="btn">
      <div class="btn-slider">
        <div class="el">
          <span class="">Info</span>
        </div>
        <div class="el">
          <span class="">Close</span>
        </div>
      </div>
    </div>

    <div class="header-container">
      <p class="header-text">
